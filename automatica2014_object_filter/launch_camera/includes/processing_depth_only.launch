<!-- Load full set of processing nodelets for an OpenNI device -->
<launch>

  <!-- Name of nodelet manager, must be fully resolved -->
  <arg name="manager" />

  <arg name="respawn" default="false" />
  
  <arg name="rectify" default="true" />
  
  <!-- Remapping arguments -->
  <arg name="rgb"              default="rgb" />
  <arg name="ir"               default="ir" />
  <arg name="depth"            default="depth" />

  <!-- IR processing -->
  <include file="$(find automatica2014_object_filter)/launch_camera/includes/ir.launch"
	   ns="$(arg ir)">
    <arg name="manager" value="$(arg manager)" />
    <arg name="respawn" value="$(arg respawn)" />
    <arg name="rectify" value="$(arg rectify)" />
    <arg name="rgb" value="$(arg rgb)" />
    <arg name="ir" value="$(arg ir)" />
    <arg name="depth" value="$(arg depth)" />
  </include>
  
   <!-- Color processing -->
  <include file="$(find automatica2014_object_filter)/launch_camera/includes/color.launch"
	   ns="$(arg rgb)">
    <arg name="manager" value="$(arg manager)" />
    <arg name="respawn" value="$(arg respawn)" />
    <arg name="rectify" value="$(arg rectify)" />
    <arg name="rgb" value="$(arg rgb)" />
    <arg name="ir" value="$(arg ir)" />
    <arg name="depth" value="$(arg depth)" />
  </include>

  <!-- Depth processing -->
  <include file="$(find automatica2014_object_filter)/launch_camera/includes/depth.launch"
	   ns="$(arg depth)">
    <arg name="manager" value="$(arg manager)" />
    <arg name="respawn" value="$(arg respawn)" />
    <arg name="rectify" value="$(arg rectify)" />    
    <arg name="rgb" value="$(arg rgb)" />
    <arg name="ir" value="$(arg ir)" />
    <arg name="depth" value="$(arg depth)" />
  </include>


</launch>
